<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/cardview_layout">

        <ImageButton
            android:id="@+id/cardview_play_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:src="@android:drawable/ic_media_play" />

        <TextView
            android:id="@+id/cardview_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AAAAAAAA"
            android:textSize="21sp"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_above="@+id/cardview_task_description"
            android:layout_toRightOf="@+id/cardview_play_btn"
            android:layout_toEndOf="@+id/cardview_play_btn" />

        <TextView
            android:id="@+id/cardview_task_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BBBBBBBB"
            android:textSize="12sp"
            android:layout_alignBottom="@+id/cardview_play_btn"
            android:layout_alignLeft="@+id/cardview_task_title"
            android:layout_alignStart="@+id/cardview_task_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:textSize="10sp"
            android:id="@+id/cardview_task_tomatoes"
            android:layout_below="@+id/cardview_task_description"
            android:layout_alignLeft="@+id/cardview_task_description"
            android:layout_alignStart="@+id/cardview_task_description" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
